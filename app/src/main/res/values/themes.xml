<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.TatumTech" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.TatumTech.Splash" parent="Theme.SplashScreen">
        <!-- Background color for the splash screen -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Logo shown in the center -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>

        <!-- Duration of the icon fade out -->
        <item name="postSplashScreenTheme">@style/Theme.TatumTech</item>
    </style>

</resources>
